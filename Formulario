    private void comboDisciplinaCoordActionPerformed(java.awt.event.ActionEvent evt) {                                                     

        areaLista.setText("Alunos que solicitaram matricula: \n");
        for(Aluno a : alunos){

            if(a.disciplina.equals(comboDisciplinaCoord.getSelectedItem().toString()))
            {
                areaLista.append(a.nome + "\n");
            }
        }
    }                                                    

    private void botaoLimpaActionPerformed(java.awt.event.ActionEvent evt) {                                           
        campoNome.setText("");
        campoCPF.setText("");
        campoEmail.setText("");
        comboDisciplina.setSelectedIndex(0);
    }                                          

    private void botaoMatriculaActionPerformed(java.awt.event.ActionEvent evt) {                                               
        nome = campoNome.getText();
        cpf = campoCPF.getText();
        email = campoEmail.getText();
        disciplina = comboDisciplina.getSelectedItem().toString();

        alunos.add(new Aluno(nome,cpf,email,disciplina));

    }                                              

    private void comboDisciplinaActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
    }                                               

    private void campoEmailActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void campoCPFActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        

    private void campoNomeActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void listaAlunosProfActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
    }                                               

    private void comboDisciplinaProfActionPerformed(java.awt.event.ActionEvent evt) {                                                    

        for(Aluno a : alunos){

            if(a.disciplina.equals(comboDisciplinaProf.getSelectedItem().toString()))
            {
                listaAlunosProf.addItem(a.nome);
            }
        }
    }                                                   

    private void aceitaAlunoActionPerformed(java.awt.event.ActionEvent evt) {                                            
        areaMatriculados.append("\n" + listaAlunosProf.getSelectedItem().toString());
        
    }                                           

